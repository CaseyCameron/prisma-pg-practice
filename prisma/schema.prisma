generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scale {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  modes      Mode      @relation(fields: [modeId], references: [id])
  modeId     Int
  composer   Composer? @relation(fields: [composerId], references: [id])
  composerId Int?
}

model Mode {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  scales Scale[]
}

model Genre {
  id     Int    @id @default(autoincrement())
  name   String
  origin String
}

model Composer {
  id          Int           @id @default(autoincrement())
  dob         DateTime
  scalesUsed  Scale[]
  Composition Composition[]
}

model Composition {
  id         Int      @id @default(autoincrement())
  name       String
  composer   Composer @relation(fields: [composerId], references: [id])
  composerId Int
}
